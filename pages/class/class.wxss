page {
  background-color: #efeff4;
}

.weui-cells_after-title {
  margin-top: 40rpx;
  width: 90%;
  margin-left: 5%;
  margin-bottom: 40rpx;
}

.weui-select {
  text-align: center;
  border-left: 1rpx solid #d9d9d9;
  border-top: 1rpx solid #d9d9d9;
  height: 70rpx;
  min-height: 70rpx;
  line-height: 70rpx;
  background: -webkit-linear-gradient(#fff, #cecece);
  background: -o-linear-gradient(#fff, #cecece);
  background: -moz-linear-gradient(#fff, #cecece);
  background: linear-gradient(#fff, #cecece);
  border-radius: 3px;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
  border-bottom-left-radius: 3px;
}

.date-tab {
  width: 100%;
  height: 180rpx;
  padding: 0 70rpx;
}

.date-tab-view {
  list-style: none;
  width: 90rpx;
  height: 90rpx;
  border: solid 1rpx #c1c1c1;
  border-radius: 10rpx;
  display: inline-block;
  font-size: 13px;
  text-align: center;
  margin-right: 15rpx;
}

image {
  width: 75%;
  height: 75%;
}

.date-left {
  float: left;
}

.time-picker-content {
  width: 100%;
  height: 100%;
}

#timePickerBtn {
  width: 65rpx;
  height: 67rpx;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
}

.active {
  color: #fff;
  border: 1px solid #52b297;
  background-color: #52b297;
}

.schedule-row {
  height: 140rpx;
  background: #fff;
}

.schedule-first-col {
  width: 23%;
}

.schedule-second-col {
  width: 55%;
}

.schedule-third-col {
  width: 22%;
}

.schedule-general-style {
  height: 140rpx;
  display: inline-block;
  position: relative;
}

.schedule-time-text {
  position: absolute;
  height: 140rpx;
  width: 100%;
  line-height: 140rpx;
  text-align: center;
  font-size: 20px;
  font-weight: 800;
  color: #000;
}

.schedule-title {
  position: absolute;
  color: #53b196;
  font-size: 0.8rem;
  font-weight: bold;
  width: 100%;
  margin-top: 25rpx;
}

.schedult-content {
  /* position: absolute;
  height: 90rpx;
  width: 100%;
  margin-top: 50rpx; */
  position: absolute;
  height: 80rpx;
  width: 100%;
  margin-top: 60rpx;
  line-height: 80rpx;
}

.schedult-teacher {
  color: #efa236;
}

.schedult-people-number {
  font-weight: 300;
  color: #2e2e2e;
  margin-left: 13rpx;
}

.schedult-teacher, .schedult-people-number {
  font-size: 0.8rem;
}

.schedule-class-btn {
  position: absolute;
  color: #fff;
  background-color: #53b196;
  border-color: #53b196;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  line-height: 1.5;
  border-radius: 6rpx;
  white-space: nowrap;
  margin-top: 42rpx;
  margin-left: 15rpx;
}
